<div class="panel panel-default">
  <div class="panel-heading">
    <i class="icon-user-follow"></i>
    信息类型列表
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-hover b-t b-light">
      <thead>
        <tr>
          <th >名称</th>
          <th >描述</th>
          <th style="width:150px">创建时间</th>
          <th style="width:175px">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @info_types.each do |info_type|%>
          <tr>
            <td><%=info_type.name%></td>
            <td><%=info_type.desc%></td>
            <td><%= time_f(info_type.created_at) %></td>
            <td>
              <%= operation_to @role_actions, "显示",  admin_info_type_path(info_type) %>
              <%= operation_to @role_actions, "编辑", edit_admin_info_type_path(info_type) %>
              <%= operation_to @role_actions, "删除",admin_info_type_path(info_type), data: { :confirm => '确认要删除吗?' }, :method => :delete %>
            </td>
          </tr>
        <% end%>
      </tbody>
    </table>
  </div>
  <footer class="panel-footer">
    <div class="row">
      <div class="col-sm-6 hidden-xs">
        <small class="text-muted inline m-t-sm m-b-sm">记录数:<%= @info_types.size %></small>
      </div>
      <div class="col-sm-6 text-right text-center-xs">
        <%= paginate @info_types %>
      </div>
    </div>
  </footer>
</div>
