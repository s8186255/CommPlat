<div  class="panel panel-default">
  <div class="panel-heading">
    <div class="row m-l-xs m-r-xs">
      <i class="icon-users"></i> 待审核缴费情况
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th>主办方</th>
          <th>订单号</th>
          <th>联系人</th>
          <th>手机</th>
          <th>办卡张数</th>
          <th>合计费用</th>
          <th style="width:150px;">创建时间</th>
          <th style="width:175px;">审核</th>
        </tr>
      </thead>
      <tbody>
        <%= render collection: @payments, partial: "payment"  %>
      </tbody>
    </table>
  </div>
  <footer class="panel-footer">
    <div class="row">
      <div class="col-sm-6 hidden-xs">
        <small class="text-muted inline m-t-sm m-b-sm">共<%= @payments.size %>位</small>
      </div>
      <div class="col-sm-6 text-right text-center-xs">
        <%= paginate @payments %>
      </div>
    </div>
  </footer>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/" method="get" >
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="exampleModalLabel">审核不通过</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="message-text" class="control-label">原因:</label>
            <input type="hidden" name="id" id="" value="" />
            <textarea class="form-control" id="message-text" name="msg"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
          <button type="submit" class="btn btn-primary">提交</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript" charset="utf-8">
  $('#exampleModal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget) // Button that triggered the modal
    var recipient = button.data('whatever') // Extract info from data-* attributes
    // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
    // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
    var form = $('.modal-content form');
    form.attr("action", "/card/check/exhibitor_is_not_ok");
    $('.modal-body input').val(recipient);
  })
</script>
