<div  class="panel panel-default">
  <div class="panel-heading">
    <div class="row m-l-xs m-r-xs">
      <i class="icon-users"></i> 待制卡清单
    </div>
  </div>
  <div class="row wrapper">
    <div class="col-sm-5 m-b-xs">
      <% if current_user.type == "admin" %>
        <form action="" method="get">
          <select name="expo_id" class="input-sm form-control w-sm inline v-middle">
            <option value="">请选择展会</option>
            <% @expos.each do |expo| %>
              <option value="<%= expo.id %>" <%= "selected" if expo.id.to_s == params[:expo_id] %>><%= expo.name %></option>
            <% end %>
          </select>
          <select name="card_type_id" class="input-sm form-control w-sm inline v-middle">
            <option value="">选择卡证类型</option>
            <% @card_types.each do |card_type| %>
              <option value="<%= card_type.id %>"<%= "selected" if card_type.id.to_s == params[:card_type_id] %>><%= card_type.name %></option>
            <% end %>
          </select>
          <button class="btn btn-sm btn-default">查看</button>
        </form>
      <% end %>
    </div>
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3">
      <%#<form action="" method="get">%>
        <%#<div class="input-group">%>
          <%#<input type="text" name="q" class="input-sm form-control" placeholder="输入用户名">%>
          <%#<span class="input-group-btn">%>
            <%#<button class="btn btn-sm btn-default" type="button">查找</button>%>
            <%#</span>%>
          <%#</div>%>
        <%#</form>%>
    </div>
    <div class="col-sm-1" style="padding-left: 0px">
      <!--
      <a href="/card/make/print_list?card_type_id=<%= params[:card_type_id] %>" target="_blank" class="btn btn-sm btn-info pull-right">全部打印</a>
      -->
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th>展会</th>
          <th>参展商</th>
          <th>卡证类型</th>
          <th>姓名</th>
          <th style="width:150px;">创建时间</th>
          <th>操作</th>
          <th>状态</th>
        </tr>
      </thead>
      <tbody>
        <%= render collection: @cards, partial: "card"  %>
      </tbody>
    </table>
  </div>
  <footer class="panel-footer">
    <div class="row">
      <div class="col-sm-6 hidden-xs">
        <small class="text-muted inline m-t-sm m-b-sm">共<%= @cards.size %>位</small>
      </div>
      <div class="col-sm-6 text-right text-center-xs">
        <%= paginate @cards %>
      </div>
    </div>
  </footer>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="exampleModalLabel">审核不通过</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="message-text" class="control-label">原因:</label>
            <input type="hidden" name="id" id="" value="" />
            <textarea class="form-control" id="message-text" name="msg" value="test"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
        </div>
    </div>
  </div>
</div>
<script type="text/javascript" charset="utf-8">
  $('#exampleModal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget) // Button that triggered the modal
    var recipient = button.data('whatever') // Extract info from data-* attributes
    // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
    // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
    $('#message-text').val(recipient);
  })
</script>
