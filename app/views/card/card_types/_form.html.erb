<%= simple_form_for [:card, @card_type], :html => {class: "form-horizontal", multipart: true} do |f| %>
  <%= f.input :name, label: "卡证类型名" %>
  <%= f.input :price, label: "单价" %>

  <div class="form-group string required card_type_price">
    <label class="string required col-sm-2 control-label" for="card_type_price">
      <abbr title="required">*</abbr>
      卡样式
    </label>
    <div class="col-sm-10">
      <label style="float: left">背景：</label><%= ajax_upload_file_field "#card" %>
    <%= dash_line %>
    <label>字段：</label><%= edit_card_font_tool %>
  <%= dash_line %>
  <% if @card_type.format.nil? %>
    <%= new_card_type @applicant_type%>
  <% else %>
    <%= edit_card_type @applicant_type,@card_type %>
  <% end %>
</div>
<input type="hidden" name="card_type[format]" id="card_format" value="<%= @format_string%>"/>
<input type="hidden" name="background_img_id" />
    </div>

    <div class="text-center">
      <%= f.button :submit, "提交",  class: "btn btn-info"  %>
      <%= link_to "返回", card_expos_path, class: "btn btn-default" %>
    </div>
  <% end %>

  <%= config_card_js @card_type,Settings.applicant_type.all_fields%>


